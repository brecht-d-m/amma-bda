extends layout
block content
div(id="main-wrapper")
    nav.navbar.navbar-default.navbar-static-top(role="navigation", style="margin-bottom: 0")
        div.navbar-header
            a.navbar-brand Datatonic
    div.container
        div.wrapper-mainpage(style="text-align: center")
        br
        br
        div.col-md-6.col-md-offset-3.text-center
            br
            br
            form(id="google-cloud-init")
                div.input-group
                    span.input-group-addon(id="id-addon") Google Cloud ID
                    input.form-control(id="gcloud-id-input" type="text", placeholder="Google Cloud Project id", value="propane-bearing-124123")
                br
                div.btn-group.btn-group-lg
                    button.btn.btn-info(id="run-local-submit", type="button") <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Deploy locally
                    button.btn.btn-primary(id="run-gcloud-submit", type="button") <span class="glyphicon glyphicon-cloud" aria-hidden="true"></span> Deploy to Google Cloud
            br
            div
                h3 Datalab status:
                    span.label.label-success(id="datalab-status") Running
            br
            div.col-md-6.col-md-offset-3
                span
                    button.btn.btn-primary.btn-large(id="retrieve-notebooks", type="button") Retrieve notebooks
                    ul.list-group(id="notebooklist")

    div(id="footer" style="text-align: center")
        a(href="https://github.com/brecht-d-m/amma-bda")
            i.fa.fa-github(style="font-size: 300%")